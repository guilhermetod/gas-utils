{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "types": [
      "google-apps-script"
    ]
  },
  "include": [
    "./src/",
  ],
  "exclude": [
    "./src/**/*.test.ts"
  ]
}
